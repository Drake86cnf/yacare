{% set tapir_mostrarmodal = 0 %}
{% set block_pagina_titulo = block('pagina_titulo') %}  
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ tapir_nombreaplicacion }}">
    <meta name="author" content="Ernesto N. Carrea">

    <title>{{ tapir_nombreaplicacion }}{% if block_pagina_titulo is not empty %} - {{ block_pagina_titulo|raw }}{% endif %}</title>

    <link rel="icon" href="{{ asset('bundles/yacarebase/img/yacare_logo64.png') }}">
    
    <link href="{{ asset('bundles/tapirbase/css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/tapirbase/css/font-awesome.min.css') }}" rel="stylesheet" />

    <link href="{{ asset('bundles/tapirbase/css/tapir.css') }}" rel="stylesheet" />
    
    <script type="text/javascript" src="{{ asset('bundles/tapirbase/js/jquery-2.1.0.min.js') }}"></script>
</head>

<body>
    {% for type, flashMessages in app.session.flashbag.all() %}
    {% for flashMessage in flashMessages %}
        <div class="alert alert-dismissable alert-{{ type }}">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            {{ flashMessage|raw }}
        </div>
    {% endfor %}
    {% endfor %}

    {% block pagina_contenido %}{% endblock %}

    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="{{ asset('bundles/tapirbase/js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/tapirbase/js/jquery.history.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/tapirbase/js/tapir.js') }}"></script>
  </body>
</html>