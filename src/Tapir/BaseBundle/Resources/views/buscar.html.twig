{% set filtro_buscar = app.request.get('filtro_buscar') %}
<div class="input-group">
	<input class="form-control input-sm" type="text" autocomplete="off"
		autofocus size="50" maxlength="100" id="filtro_buscar"
		id="filtro_buscar" name="filtro_buscar" placeholder="Buscar..."
		value="{{ filtro_buscar }}" style="max-width: 140px" />
    {% if filtro_buscar %}
    <button class="btn btn-sm btn-primary" onclick="tapirNavegarA('?filtro_buscar=');"><i class="fa fa-times-circle"></i></button>
    {% endif %}
</div>

