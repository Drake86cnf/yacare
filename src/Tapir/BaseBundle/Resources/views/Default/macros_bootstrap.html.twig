{% macro tabla_operaciones_socio(operaciones) %}
<table class="table table-hover">
					<thead>
						<tr>
							<th>Comercio</th>
							<th>Fecha</th>
							<th>Cuotas</th>
							<th>Total</th>
						</tr>
					</thead>
				<tbody>
 		{% for operacion in operaciones %}
			<tr>
				<td>{{ operacion.Comercio}}</td>
				<td>{{ operacion.Fecha | tapir_fecha('short','none')}}</td>
				<td>{{ operacion.Cuotas}}</td>
				<td>{{ operacion.Total | tapir_importe}}</td> 
		{% endfor %}
		</tbody>
		</table>
{% endmacro %}
