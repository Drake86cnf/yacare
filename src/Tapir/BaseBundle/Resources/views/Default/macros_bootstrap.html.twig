{% macro grid_row() %}

<div class="row">
{% endmacro %} 

{% macro grid_col(tamanio) %}
{% if (tamanio == 14) %}
<div class="col-xs-3">
{% elseif (tamanio == 13) %}
<div class="col-xs-4">
{% elseif (tamanio == 23) %}
<div class="col-xs-8">
{% elseif (tamanio == 12) %}
<div class="col-xs-6">
{% endif %}
{% endmacro %} 

{% macro grid_row_col_end() %}
</div>
{% endmacro %} 

{% macro grid_label_text(label, text, class) %}
<div class="row">
	<div class="col-xs-4 text-right text-label text-nowrap">{{ label|raw }}</div>
	<div class="col-xs-8 text-value {{ class|default('') }}">{{ text|raw }}</div>
</div>
{% endmacro %} 

{% macro grid_label_text66(label, text, class) %}
<div class="row">
	<div class="col-xs-6 text-right text-label text-nowrap">{{ label|raw }}</div>
	<div class="col-xs-6 text-value {{ class|default('') }}">{{ text|raw }}</div>
</div>
{% endmacro %} 

{% macro grid_header(label) %}
<div class="row">
	<div class="col-xs-8 col-xs-offset-4">
		<strong>{{ label|raw }}</strong>
	</div>
</div>
{% endmacro %} 

{% macro grid_header2(label) %}
<div class="row">
	<div class="col-xs-8 col-xs-offset-4 pull-left">
		<h4 class="text-muteda">{{ label|raw }}</h4>
	</div>
</div>
{% endmacro %}
