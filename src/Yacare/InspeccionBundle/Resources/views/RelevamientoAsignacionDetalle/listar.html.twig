{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block title %}Relevamientos - Resultados{% endblock %}

{% block content_header '' %}

{% block content %}
<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Direcci√≥n</th>
            <th>SMP</th>
            <th>Incidencias</th>
            <th>Obs</th>
        </tr>
    </thead>
    <tbody>
