{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block pagina_titulo %}Relevamientos - Tipos de resultado{% endblock %}



{% block pagina_contenido %}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Grupo</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.Grupo }}</td>
            <td><a href="{{ path('yacare_inspeccion_relevamientoresultado_editar', { 'id': entity.Id }) }}">{{ entity.Nombre }}</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>

<a href="{{ path('yacare_inspeccion_relevamientoresultado_editar_1') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo tipo de resultado</a>
{% endblock %}