{% extends 'YacareBaseBundle:Default:listar.html.twig' %}

{% block title %}Talonarios de actas{% endblock %}

{% block content_header '' %}

{% block content %}

<legend>Talonarios</legend>
{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-hover">
    <thead>
        <tr>
            <th> </th>
            <th>Tipo</th>
            <th>Numeracion</th>
            <th>En poder de</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a class="btn btn-default btn-xs" href="{{ path(baseroute ~ '_editar', { 'id': entity.Id }) }}"><i class="fa fa-edit"></i> Editar</a></td>
            <td>{{ entity.Tipo }}</td>
            <td>{{ entity.NumeroDesde }} - {{ entity.NumeroHasta }}</td>
            <td>{{ entity.EnPoderDe }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% include 'YacareBaseBundle::paginar.html.twig' %}

<a href="{{ path(baseroute ~ '_editar_1', arrastre) }}" class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo talonario de actas</a>
{% endblock %}
