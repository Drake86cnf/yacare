{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block pagina_titulo %}Relevamientos{% endblock %}

{% block pagina_contenido %}
<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>
                <a class="btn btn-default btn-xs" href="{{ path('yacare_inspeccion_relevamientoasignacion_listarrelevamiento', { 'id': entity.Id }) }}"><i class="fa fa-list"></i> Asignaciones</a>
                <a class="btn btn-default btn-xs" href="{{ path('yacare_inspeccion_relevamientoasignacionresultado_listarrelevamiento', { 'id': entity.Id }) }}"><i class="fa fa-list"></i> Resultados</a>
                <a class="btn btn-default btn-xs" href="{{ path('yacare_inspeccion_relevamiento_editar', { 'id': entity.Id }) }}"><i class="fa fa-edit"></i> Editar</a>
            </td>
            <td>{{ entity.Nombre }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>

{% endblock %}

{% block pagina_acciones2 %}
<a href="{{ path(baseroute ~ '_editar_1') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Iniciar nuevo relevamiento</a>
{% endblock %}