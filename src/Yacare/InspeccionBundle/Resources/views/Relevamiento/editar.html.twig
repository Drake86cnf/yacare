{% extends 'YacareBaseBundle::editar.html.twig' %}

{% block pagina_titulo %}{% if entity.id %} {{ entity.Nombre }} {% else %} Nuevo relevamiento {% endif %}{% endblock %}

{% block pagina_acciones %}
    <button type="submit" class="btn btn-primary"><i class="fa fa-white icon-ok"></i> Guardar</button>
    <a class="btn btn-primary" href="{{ path('yacare_inspeccion_relevamiento_listar') }}">Cancelar</a>
{% endblock %}

{% block pagina_acciones2 %}
    {% if entity.id %}
        <a class="btn btn-primary" href="{{ path('yacare_inspeccion_relevamientoasignacion_listarrelevamiento', { 'id': entity.id }) }}"><i class="fa fa-list"></i> Ver asignaciones</a>
        <a class="btn btn-primary" href="{{ path('yacare_inspeccion_relevamientoasignacionresultado_listarrelevamiento', { 'id': entity.id }) }}"><i class="fa fa-list"></i> Ver resultados</a>
    {% endif %}
{% endblock %}