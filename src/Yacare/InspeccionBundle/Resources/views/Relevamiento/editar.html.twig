{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block title %}Relevamiento{% endblock %}

{% block content %}

{% form_theme edit_form 'YacareBaseBundle:Form:form_div_layout.html.twig' %}

<form class="form-horizontal" action="{{ path('yacare_inspeccion_relevamiento_guardar', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<legend>{% if entity.id %} {{ entity.Nombre }} {% else %} Nuevo relevamiento {% endif %}</legend>
	{{ form_widget(edit_form) }}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary"><i class="icon-white icon-ok"></i> Guardar</button>
		<a class="btn" href="{{ path('yacare_inspeccion_relevamiento_listar') }}">Cancelar</a>

                {% if not create %}
                    &nbsp;
                    <a class="btn" href="{{ path('yacare_inspeccion_relevamientoasignacion_asignarcalle', { 'id': entity.id }) }}"><i class="icon-map-marker"></i> Asignar calle</a>
                    <a class="btn" href="{{ path('yacare_inspeccion_relevamientoasignacion_asignarmacizo', { 'id': entity.id }) }}"><i class="icon-map-marker"></i> Asignar macizo</a>
                {% endif %}
    </div>
    
</form>

{% if not create %}
<a class="btn" href="{{ path('yacare_inspeccion_relevamientoasignacion_listar', { 'id': entity.id }) }}"><i class="icon-list"></i> Ver asignaciones</a>
<a class="btn" href="{{ path('yacare_inspeccion_relevamientoasignaciondetalle_listar', { 'id': entity.id }) }}"><i class="icon-list"></i> Ver resultados</a>
<br />
<br />
<form class="form-horizontal" action="{{ path('yacare_inspeccion_relevamiento_eliminar', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button class="btn btn-danger" type="submit"><i class="icon-trash icon-white"></i> Eliminar relevamiento</button>
</form>
{% endif %}

{% endblock %}