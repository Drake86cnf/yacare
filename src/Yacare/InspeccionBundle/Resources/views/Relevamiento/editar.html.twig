{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block title %}Relevamiento{% endblock %}

{% block content %}

{% form_theme edit_form 'YacareBaseBundle:Form:form_div_layout.html.twig' %}

<form class="form-horizontal" action="{{ path('yacare_inspeccion_relevamiento_guardar', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<legend>{% if entity.id %} {{ entity.Nombre }} {% else %} Nuevo relevamiento {% endif %}</legend>
	{{ form_widget(edit_form) }}

    {% if entity %}
    <div class="form-actions">
        <a class="btn" href="{{ path('yacare_inspeccion_relevamientoasignacion_listarrelevamiento', { 'id': entity.id }) }}"><i class="icon-list"></i> Ver asignaciones</a>
        <a class="btn" href="{{ path('yacare_inspeccion_relevamientoasignaciondetalle_listarrelevamiento', { 'id': entity.id }) }}"><i class="icon-list"></i> Ver resultados</a>
    </div>
    {% endif %}

    <div class="form-actions">
        <button type="submit" class="btn btn-primary"><i class="icon-white icon-ok"></i> Guardar</button>
        <a class="btn" href="{{ path('yacare_inspeccion_relevamiento_listar') }}">Cancelar</a>
    </div>

</form>

{% if entity %}
<a class="btn btn-danger" href="{{ path('yacare_inspeccion_relevamiento_eliminar', { 'id': entity.id }) }}"><i class="icon-trash icon-white"></i> Eliminar relevamiento</a>
{% endif %}


{% endblock %}