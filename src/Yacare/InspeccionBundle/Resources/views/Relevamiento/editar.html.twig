{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block title %}Relevamiento{% endblock %}

{% block content %}

<form class="form-horizontal" action="{{ path('yacare_inspeccion_relevamiento_guardar', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <legend>{% if entity.id %} {{ entity.Nombre }} {% else %} Nuevo relevamiento {% endif %}</legend>
    {{ form_widget(edit_form) }}

    <div class="form-actions">
    {% if entity %}
        <a class="btn btn-primary" href="{{ path('yacare_inspeccion_relevamientoasignacion_listarrelevamiento', { 'id': entity.id }) }}"><i class="fa fa-list"></i> Ver asignaciones</a>
        <a class="btn btn-primary" href="{{ path('yacare_inspeccion_relevamientoasignaciondetalle_listarrelevamiento', { 'id': entity.id }) }}"><i class="fa fa-list"></i> Ver resultados</a>
    {% endif %}

        <button type="submit" class="btn btn-primary"><i class="fa fa-white icon-ok"></i> Guardar</button>
        <a class="btn btn-primary" href="{{ path('yacare_inspeccion_relevamiento_listar') }}">Cancelar</a>
    </div>

</form>

{% endblock %}