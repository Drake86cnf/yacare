{% extends 'TapirAbmBundle::editar.html.twig' %} 
{% set tapir_editar_nombreguadar = 'Aceptar' %} 
{% block pagina_titulo %}Turno inspeccion{% endblock %}
 {% block pagina_contenido %}
<div class="row form-group">
	<div class="col-sm-8 col-sm-offset-2">
		{% if res.Entidad.TurnoFecha %}
		<h3>El turno fue asignado en la siguiente fecha y hora</h3>
		{% endif %}
	</div>
</div>
{{ parent() }}
 {% endblock pagina_contenido %} 
{% block pagina_acciones%}
<button type="button"
	
	{% if tapir_modal is not defined or tapir_modal == 0 %}
	onclick="return tapirAtras();" 
	{% else %} data-dismiss="modal"
	
	{% endif %} class="btn btn-default">Cancelar</button>
<button type="submit" onclick="tapir-button-accept"
	{% if res.Entidad.TurnoFecha %}
		{% set res.Entidad.TurnoFecha = "000/00/00 00:00:00" %}
	{% endif %}
	 value="Guardar" class="btn {% if res.Entidad.TurnoFecha %}btn-success{% endif %} tapir-button-accept">	{% if res.Entidad.TurnoFecha %} <i class="fa fa-fw fa-times"></i>Anular
	turno {% else %} <i class="fa fa-fw fa-clock-o"></i> Guardar turno {%
	endif %}
</button>
{% endblock pagina_acciones %}
