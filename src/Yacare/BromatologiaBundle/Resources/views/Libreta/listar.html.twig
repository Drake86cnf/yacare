{% extends 'YacareBaseBundle:Default:listar.html.twig' %}

{% block title %}Libreta{% endblock %}

{% block content_header '' %}

{% block content %}

{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Persona</th>
            <th>Fecha Certificado</th>
            <th>Profesional</th>
            <th>Curso</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('yacare_bromatologia_libreta_editar', { 'id': entity.Id }) }}"><i class="icon-edit"></i></a> {{ entity.Persona }}</td>
            <td>{{ entity.FechaCertificado }}</td>
            <td>{{ entity.Profesional }}</td> 
            <td>{{ entity.Curso }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>

<a href="{{ path('yacare_bromatologia_libreta_editar_1') }}" class="btn"><i class="icon-plus"></i> Nueva Libreta</a>
{% endblock %}
