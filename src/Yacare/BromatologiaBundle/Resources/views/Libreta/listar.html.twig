{% extends 'YacareBaseBundle:Default:listar.html.twig' %}

{% block pagina_titulo %}Libreta{% endblock %}



{% block pagina_contenido %}

{% include 'TapirBaseBundle::buscar.html.twig' %}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Persona</th>
            <th>Fecha certificado</th>
            <th>Profesional</th>
            <th>Curso</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a data-toggle="ajax-link" class="btn btn-default btn-xs hidden-print" href="{{ path(baseroute ~ '_editar', { 'id': entity.Id }) }}"><i class="fa fa-edit"></i> Editar</a></td>
            <td>{{ entity.Persona }}</td>
            <td>{{ entity.FechaCertificado|date("d/m/Y") }}</td>
            <td>{{ entity.Profesional }}</td> 
            <td>{{ entity.Curso }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% include 'TapirBaseBundle::paginar.html.twig' %}

<a data-toggle="ajax-link" href="{{ path(baseroute ~ '_editar_1', arrastre) }}" class="btn btn-primary"><i class="fa fa-plus"></i> Nueva Libreta</a>

{% endblock %}
