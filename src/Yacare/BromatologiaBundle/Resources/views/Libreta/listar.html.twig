{% extends 'YacareBaseBundle:Default:listar.html.twig' %}

{% block pagina_titulo %}Libreta{% endblock %}



{% block pagina_contenido %}

{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Persona</th>
            <th>Fecha certificado</th>
            <th>Profesional</th>
            <th>Curso</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('yacare_bromatologia_libreta_editar', { 'id': entity.Id }) }}"><i class="fa fa-edit"></i></a> {{ entity.Persona }}</td>
            <td>{{ entity.FechaCertificado|date("d/m/Y") }}</td>
            <td>{{ entity.Profesional }}</td> 
            <td>{{ entity.Curso }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>

<a href="{{ path('yacare_bromatologia_libreta_editar_1') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Nueva libreta</a>
{% endblock %}
