{% extends 'YacareBaseBundle:Default:listar.html.twig' %}

{% block pagina_titulo %}CertificadoBpm{% endblock %}



{% block pagina_contenido %}

{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Persona</th>
            <th>Fecha Examen</th>
            <th>Nota</th>
            <th>Aprobado</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a data-toggle="ajax-link" class="btn btn-default btn-xs hidden-print" href="{{ path(baseroute ~ '_editar', { 'id': entity.Id }) }}"><i class="fa fa-edit"></i> Editar</a></td>
            <td>{{ entity.Persona }}</td>
            <td>{{ entity.FechaExamen|date("d/m/Y") }}</td>
            <td>{{ entity.Nota }}</td> 
            <td>
            {% if entity.Nota > 5 %}
                    Aprobado
            {% else %}
                    Desaprobado
            {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% include 'YacareBaseBundle::paginar.html.twig' %}

<a data-toggle="ajax-link" href="{{ path(baseroute ~ '_editar_1', arrastre) }}" class="btn btn-primary"><i class="fa fa-plus"></i> Nueva acta</a>

{% endblock %}
