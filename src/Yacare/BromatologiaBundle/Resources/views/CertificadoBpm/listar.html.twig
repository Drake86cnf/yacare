{% extends 'YacareBaseBundle:Default:listar.html.twig' %}

{% block pagina_titulo %}CertificadoBpm{% endblock %}



{% block pagina_contenido %}

{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Persona</th>
            <th>Fecha Examen</th>
            <th>Nota</th>
            <th>Aprobado</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('yacare_bromatologia_certificadobpm_editar', { 'id': entity.Id }) }}"><i class="fa fa-edit"></i></a> {{ entity.Persona }}</td>
            <td>{{ entity.FechaExamen|date("d/m/Y") }}</td>
            <td>{{ entity.Nota }}</td> 
            <td>
            {% if entity.Nota > 5 %}
                    Aprobado
            {% else %}
                    Desaprobado
            {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>

<a href="{{ path('yacare_bromatologia_certificadobpm_editar_1') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo certificado</a>
{% endblock %}
