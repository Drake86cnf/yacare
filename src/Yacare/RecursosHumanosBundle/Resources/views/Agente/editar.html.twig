{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block title %}Agente{% endblock %}

{% block content %}

{% form_theme edit_form 'YacareBaseBundle:Form:form_div_layout.html.twig' %}

<form class="form-horizontal" action="{{ path('yacare_recursoshumanos_agente_guardar', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<legend>{% if entity.id %} Agente {{ entity.NombreVisible }} {% else %} Nuevo agente {% endif %}</legend>
	{{ form_widget(edit_form) }}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary"><i class="icon-white icon-ok"></i> Guardar</button>
		<a class="btn" href="{{ path('yacare_recursoshumanos_agente_listar') }}">Cancelar</a>
    </div>
</form>

{% if not create %}
<form class="form-horizontal" action="{{ path('yacare_recursoshumanos_agente_eliminar', { 'id': entity.id }) }}" method="post">
	{{ form_widget(delete_form) }}
	<button class="btn btn-danger" type="submit"><i class="icon-trash icon-white"></i> Eliminar agente</button>
</form>
{% endif %}

{% endblock %}