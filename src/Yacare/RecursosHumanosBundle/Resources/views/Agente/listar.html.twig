{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block title %}Agente{% endblock %}

{% block content_header '' %}

{% block content %}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Legajo</th>
            <th>Fecha de ingreso</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><i class="icon-user"></i> <a href="{{ path('yacare_recursoshumanos_agente_editar', { 'id': entity.Id }) }}">{{ entity }}</a></td>
            <td>{{ entity.id }}</td>
            <td>{{ entity.FechaIngreso|date('d-m-Y') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>
<a href="{{ path('yacare_recursoshumanos_agente_editar_1') }}" class="btn"><i class="icon-plus"></i> Alta de nuevo agente</a>
{% endblock %}