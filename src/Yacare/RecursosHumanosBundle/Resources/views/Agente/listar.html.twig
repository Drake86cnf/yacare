{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block pagina_titulo %}Agentes{% endblock %}

{% block pagina_contenido %}
{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Legajo</th>
            <th>Nombre</th>
            <th>Departamento</th>
            <th>Fecha de ingreso</th>
            <th>Fecha de baja</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.Id }}</td>
            <td>{{ entity }}</td>
            <td>{{ entity.Departamento }}</td>
            <td>{{ entity.FechaIngreso|localizeddate('medium', 'none') }}</td>
            <td>{{ entity.FechaBaja|localizeddate('medium', 'none') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>
<a data-toggle="ajax-link" href="{{ path('yacare_recursoshumanos_agente_editar_1') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Alta de nuevo agente</a>
{% endblock %}