{% extends 'YacareBaseBundle:Default:listar.html.twig' %}

{% block title %}Local{% endblock %}

{% block content_header '' %}

{% block content %}

{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Propietario</th> 
            <th>Domicilio</th>            
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('yacare_comercio_local_editar', { 'id': entity.Id }) }}"><i class="icon-edit"></i></a> {{ entity.Propietario }}</td>
            <td>{{ entity.Domicilio }}</td>            
        </tr>
    {% endfor %}
    </tbody>
</table>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>

<a href="{{ path('yacare_comercio_local_editar_1') }}" class="btn"><i class="icon-plus"></i> Nuevo Local</a>
{% endblock %}
