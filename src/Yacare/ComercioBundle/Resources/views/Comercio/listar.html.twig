{% extends 'YacareBaseBundle:Default:listar.html.twig' %}

{% block pagina_titulo %}Comercios{% endblock %}

{% block pagina_contenido %}
{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-striped">
    <thead>
        <tr>
            <th> </th>
            <th>#</th>
            <th>Nombre</th>
            <th>Local</th>
            <th>Actividad</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a data-toggle="ajax-link" class="btn btn-default btn-xs hidden-print" href="{{ path(baseroute ~ '_editar', { 'id': entity.Id }) }}"><i class="fa fa-edit"></i> Editar</a></td>
            <td>{{ entity.id }}</td>
            <td>{{ entity.Nombre }}
            {% if entity.Estado == 0 %}
                <span class="label label-warning">En tr√°mite</span>
            {% endif %}
            </td>
            <td>{{ entity.Local }}</td>
            <td>{{ entity.ActividadPrincipal }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% include 'YacareBaseBundle::paginar.html.twig' %}
{% endblock %}

