	</div>
</div>
<div class="row form-group">
	<div class="col-xs-12 col-sm-6">{{ form_widget(edit_form.Actividad1) }}</div>
	<div class="col-xs-12 col-sm-6">{{ form_widget(edit_form.Actividad2) }}</div>
</div>
<div class="row form-group">
	<div class="col-xs-12 col-sm-6">{{ form_widget(edit_form.Actividad3) }}</div>
	<div class="col-xs-12 col-sm-6">{{ form_widget(edit_form.Actividad4) }}</div>
</div>
<div class="row form-group">
	<div class="col-xs-12 col-sm-6">{{ form_widget(edit_form.Actividad5) }}</div>
	<div class="col-xs-12 col-sm-6">{{ form_widget(edit_form.Actividad6) }}</div>
</div>

{{ form_rest(edit_form) }}
{% endblock pagina_contenido %}
