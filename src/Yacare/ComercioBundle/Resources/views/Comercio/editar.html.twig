{% extends 'TapirAbmBundle::editar.html.twig' %}

{% block pagina_titulo %}{% if entity.id %}{{ entity.Nombre }}{% else %}Nuevo comercio{% endif %}{% endblock %}

{% block pagina_contenido %}
<div class="row form-group">
	<label class="col-sm-2 control-label">Nombre de fantas√≠a</label>
    <div class="col-sm-10">{{ form_widget(edit_form.Nombre) }}</div>
</div>

<div class="row form-group">
	<label class="col-sm-2 control-label">Titular</label>
    <div class="col-sm-10">{{ form_widget(edit_form.Titular) }}</div>
</div>

<div class="row form-group">
	<label class="col-sm-2 control-label">Apoderado</label>
    <div class="col-sm-10">{{ form_widget(edit_form.Apoderado) }}</div>
</div>

<div class="row form-group">
	<label class="col-sm-2 control-label">Local comercial</label>
    <div class="col-sm-10">{{ form_widget(edit_form.Local) }}</div>
</div>

<div class="row form-group">
	<label class="col-sm-2 control-label">Expendiente</label>
    <div class="col-sm-4">{{ form_widget(edit_form.ExpedienteNumero) }}</div>

