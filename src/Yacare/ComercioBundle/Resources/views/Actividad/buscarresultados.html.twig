{% block pagina_contenido %}

<table class="table table-condensed table-hoverselect">
    <tbody>
    {% for entity in entities %}
        <tr onclick="seleccionarItem('{{ entity.id }}', '{{ entity.Nombre }}'); return false;">
            <td><i class="fa fa-angle-right"></i></td>
            <td><span style="white-space: nowrap;">{{ entity.Clamae2014|slice(0,1) }} {{ entity.Clamae2014|slice(1,2) }}-{{ entity.Clamae2014|slice(3,3) }}-{{ entity.Clamae2014|slice(6,2) }}</span></td>
            <td><span>{{ entity.Nombre }}</span>
                <span class="label label-default">Cat. {{ entity.Categoria }}</span>
                {% if entity.Exento %}<span class="label label-info">Excento</span>{% endif %}
                {% if entity.RequiereDeyma %}<span class="label label-info">Req. <abbr title="Dirección de Ecología y Medio Ambiente" class="initialism">DEyMA</abbr></span>{% endif %}
                {% if entity.RequiereDbeh %}<span class="label label-info">Req. <abbr title="Dirección de Bromatología e Higiene" class="initialism">DBeH</abbr></span>{% endif %}
            </td>
            <td>
{% if entity.Incluye %}
                <span class="text-success"><small><strong>Incluye</strong> {{ entity.Incluye }}</small></span>
{% endif %}
{% if entity.NoIncluye %}
                <span class="text-danger"><small><strong>No incluye</strong> {{ entity.NoIncluye }}</small></span>
{% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% if not entities %}
    <div class="alert alert-warning">
        <p><i class="fa fa-warning fa-2x"></i> No se encontraron resultados.</p>
    </div>
{% endif %}

{% endblock %}