{% extends 'YacareBaseBundle:Default:listar.html.twig' %}

{% block pagina_titulo %}Actividades económicas{% endblock %}

{% block pagina_contenido %}
{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-striped">
    <thead>
        <tr>
            <th> </th>
            <th>ClaMAE 2014</th>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Código <abbr title="Código de planeamiento urbano" class="initialism">CPU</abbr></th>
            <th>Obs.</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a class="btn btn-default btn-xs" href="{{ path(baseroute ~ '_editar', { 'id': entity.Id }) }}"><i class="fa fa-edit"></i> Editar</a></td>
            <td>{{ entity.Clamae2014|slice(0,1) }} {{ entity.Clamae2014|slice(1,2) }}-{{ entity.Clamae2014|slice(3,3) }}-{{ entity.Clamae2014|slice(6,2) }}</td>
            <td>{{ entity.Nombre }}</td>
            <td>{{ entity.Categoria }}</td>
            <td>{{ entity.CodigoCpu }}</td>
            <td>
                {% if entity.Exento %}<span class="label label-info">Excento</span>{% endif %}
                {% if entity.RequiereDeyma %}<span class="label label-info">Req. DEyMA</span>{% endif %}
                {% if entity.RequiereDbeh %}<span class="label label-info">Req. DBeH</span>{% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% include 'YacareBaseBundle::paginar.html.twig' %}

{% endblock %}

{% block pagina_acciones2 %}
<a href="{{ path(baseroute ~ '_editar_1') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Nueva actividad</a>
{% endblock %}