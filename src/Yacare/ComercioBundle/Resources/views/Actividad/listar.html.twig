{% extends 'YacareBaseBundle:Default:listar.html.twig' %}

{% block title %}Actividades{% endblock %}

{% block content_header '' %}

{% block content %}

<legend>Actividades económicas</legend>
{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-striped">
    <thead>
        <tr>
            <th> </th>
            <th>ClaMAE 2013</th>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Exento</th>            
            <th>Código anterior</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a class="btn btn-default btn-xs" href="{{ path(baseroute ~ '_editar', { 'id': entity.Id }) }}"><i class="fa fa-edit"></i> Editar</a></td>
            <td>{{ entity.Clamae2013 }}</td>
            <td>{{ entity.Nombre }}</td>
            <td>{{ entity.Categoria }}</td>
            <td>{{ entity.Exento }}</td>   
            <td>{{ entity.Codigo }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(entities) }}
</div>

<a href="{{ path(baseroute ~ '_editar_1') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Nueva actividad</a>
{% endblock %}
