{% extends 'YacareTramitesBundle:Tramite:listar.html.twig' %}

{% block pagina_titulo %}Certificados de habilitación comercial{% endblock %}

{% block pagina_contenido %}
{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-hoverselect">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Titular</th>
            <th class="hidden-sm hidden-xs">Actividad</th>
            <th class="hidden-sm hidden-xs">Local</th>
            <th class="hidden-xs">Fecha</th>
            <th>Vencimiento</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr onclick="yacareNavegarA('{{ path(baseroute ~ '_ver', { 'id': entity.Id }) }}')">
            <td>{{ entity.Numero }}</td>
            <td><strong>{{ entity.Comercio.Nombre }}</strong></td>
            <td>{{ entity.Comercio.Titular }}</td>
            <td class="hidden-sm hidden-xs">{% if entity.Comercio.ActividadPrincipal %}{{ entity.Comercio.ActividadPrincipal.Nombre|length > 50 ? entity.Comercio.ActividadPrincipal.Nombre|slice(0, 50) ~ '...' : entity.Comercio.ActividadPrincipal.Nombre }}{% endif %}</td>
            <td class="hidden-sm hidden-xs"><span class="text-muted">{% if entity.Comercio.Local and entity.Comercio.Local.Partida %}{{ entity.Comercio.Local.Partida.Domicilio }}{% endif %}</span></td>
            <td class="hidden-xs">{{ entity.createdAt|localizeddate('medium', 'none') }}</td>
            <td>{{ entity.Vencimiento|localizeddate('medium', 'none') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% include 'YacareBaseBundle::paginar.html.twig' %}
{% endblock %}

{% block pagina_acciones2 %}
<a data-toggle="ajax-link" href="{{ path('yacare_comercio_tramitehabilitacioncomercial_consultar', arrastre) }}" class="btn btn-primary hidden-print"><i class="fa fa-info-circle"></i> Consulta</a>
<a data-toggle="ajax-link" href="{{ path('yacare_comercio_tramitehabilitacioncomercial_editar_1', arrastre) }}" class="btn btn-primary hidden-print"><i class="fa fa-plus"></i> Iniciar nuevo trámite de habilitación comercial</a>
{% endblock %}