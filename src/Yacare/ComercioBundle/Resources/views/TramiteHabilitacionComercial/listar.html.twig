{% extends 'YacareTramitesBundle:Tramite:listar.html.twig' %}

{% block title %}Trámites de habilitación comercial{% endblock %}

{% block content %}
<legend>Trámites de habilitación comercial</legend>
{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>#</th>
            <th>Titular</th>
            <th>Actividad</th>
            <th>Local</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a class="btn btn-default btn-xs" href="{{ path(baseroute ~ '_editar', { 'id': entity.Id }) }}"><i class="fa fa-edit"></i> Editar</a> <a class="btn btn-default btn-xs" href="{{ path(baseroute ~ '_ver', { 'id': entity.Id }) }}"><i class="fa fa-folder-open"></i> Ver</a></td>
            <td>{{ entity.id }}</td>
            <td>{{ entity.Titular }}</td>
            <td>{{ entity.ActividadPrincipal }}</td>
            <td>{{ entity.Local }}</td>
            <td>
                {% if entity.Estado < 10 %}
                    <span class="label label-danger">
                {% elseif entity.Estado >= 10 and entity.Estado < 90 %}
                    <span class="label label-success">
                {% else %}
                    <span class="label label-default">
                {% endif %}
                {{ entity.EstadoNombre }}</span>
                {% if entity.EstaEnCurso %}
                    {% if entity.RequisitosFaltantesCantidad == 0 %}
                        <span class="label label-success">¡Requisitos cumplidos!</span>
                    {% else %}
                        <span class="label label-default">Faltan {{ entity.RequisitosFaltantesCantidad }} requisitos</span>
                    {% endif %}
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% include 'YacareBaseBundle::paginar.html.twig' %}

