<div id="nav-search" class="nav-search hidden-print">
    {% set filtro_buscar = app.request.get('filtro_buscar') %}
    <div class="form-inline">
        <i class="fa fa-search nav-search-icon"></i> <label>Buscar</label>
        &nbsp;
        <input class="form-control input-sm" type="text" autocomplete="off" size="64" maxlength="64" id="filtro_buscar" name="filtro_buscar" placeholder="Buscar..." value="{{ filtro_buscar }}" style="max-width: 128px" />

        {% if filtro_buscar %}
        <a class="btn btn-default btn-sm" href="#" onclick="yacareNavegarA('?filtro_buscar=');">Ver todos</a>
        {% endif %}

    </div>

    <script type="text/javascript">
    $(document).ready(function() {
        $('#filtro_buscar').keyup(function (e) {
            if (e.which === 13) {
                e.preventDefault();
                yacareNavegarA('?filtro_buscar=' + $('#filtro_buscar').val());
            }
        });
    });
    </script>
</div>