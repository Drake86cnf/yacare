{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block pagina_inicio %}
    <form class="form-horizontal" action="{{ path(baseroute ~ '_guardar', arrastre|merge({ 'id': entity.id })) }}" method="post" {{ form_enctype(edit_form) }}>
{% endblock %}
    
{% block pagina_contenido %}
    {{ form_errors(edit_form) }}
    {{ form_widget(edit_form) }}
{% endblock %}

{% block pagina_acciones %}
    <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> Guardar</button>
    <a data-dismiss="modal" class="btn btn-default" href="{{ path(baseroute ~ '_listar', arrastre) }}">Cancelar</a>
{% endblock %}
        
{% block pagina_acciones2 %}
    {% if delete_form and entity.id %}
        <a class="btn btn-danger" href="{{ path(baseroute ~ '_eliminar', arrastre|merge({ 'id': entity.id })) }}"><i class="fa fa-trash-o"></i> Eliminar</a>
    {% endif %}
{% endblock %}
        
{% block pagina_fin %}
    </form>
{% endblock %}