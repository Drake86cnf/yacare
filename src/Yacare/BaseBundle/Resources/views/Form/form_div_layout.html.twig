{% block form_start %}
{% spaceless %}
    {% set attr = attr|merge({ 'class': 'form-horizontal', 'role': 'form' }) %}
    {{ block('form_start') }}
{% endspaceless %}
{% endblock form_start %}

{% block form_widget %}
    {% if compound %}
        {{ block('form_widget_compound') }}
    {% else %}
        {% set attr = attr|merge({ 'class': 'form-control' }) %}
        {{ block('form_widget_simple') }}
    {% endif %}
{% endblock form_widget %}

        
{% block form_row %}
<div class="form-group">
    <label class="col-lg-2 control-label">{{ label }}{% if required %} <span class="required" title="Este campo es obligatorio">*</span>{% endif %}</label>
    <div class="col-lg-10">{{ form_widget(form) }}</div>
</div>
{% endblock form_row %}

        
{% block form_label %}
{% spaceless %}
    {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' control-label')|trim}) %}
    {% if not compound %}
        {% set label_attr = label_attr|merge({'for': id}) %}
    {% endif %}
    {% if required %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
    {% endif %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label }}</label>
{% endspaceless %}
{% endblock form_label %}

        
{% block choice_widget_collapsed %}
{% spaceless %}
    {% set attr = attr|merge({ 'class': 'form-control' }) %}
    <select data-rel="chosen" data-placeholder="Seleccione..." {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
        {% if empty_value is not none %}
            <option value="">{{ empty_value }}</option>
        {% endif %}
        {% if preferred_choices|length > 0 %}
            {% set options = preferred_choices %}
            {{ block('choice_widget_options') }}
            {% if choices|length > 0 and separator is not none %}
                <option disabled="disabled">{{ separator }}</option>
            {% endif %}
        {% endif %}
        {% set options = choices %}
        {{ block('choice_widget_options') }}
    </select>
{% endspaceless %}
{% endblock choice_widget_collapsed %}

        
{% block date_widget %}
{% spaceless %}
    {% if widget == 'single_text' %}
        {% set attr = attr|merge({ 'format': 'dd/MM/yyyy', 'class': 'datepicker' }) %}
        {{ block('form_widget_simple') }}
    {% else %}
        <div {{ block('widget_container_attributes') }}>
            {{ date_pattern|replace({
                '{{ year }}':  form_widget(form.year),
                '{{ month }}': form_widget(form.month),
                '{{ day }}':   form_widget(form.day),
            })|raw }}
        </div>
    {% endif %}
{% endspaceless %}
{% endblock date_widget %}
    
{% block form_horizontal_widget %}
    {% set attr = attr|merge({ 'class': 'form-inline' }) %}
    <div {{ block('widget_container_attributes') }}>
        {% for child in form %}
            <div class="form-group">
            {{ form_label(child) }}
            {{ form_widget(child) }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
    
{% block entity_id_widget %}
    <div>
        <input {{ block('widget_attributes') }} type="hidden" value="{{ value }}" />
        <a data-rel="ajax-modal" class="btn btn-default btn-xs" href="{{ path(baseroute ~ '_buscar', { 'destcontrol': id }) }}"><i class="fa fa-search"></i> Seleccionar</a>
        &nbsp;
        <span class="input" id="{{ id }}_text">(valor inicial)</span>
        
    </div>

    <script>
        $(function(ready) {
            $('#{{ id }}').change(function() {
                var a = $('#{{ id }}').val();
                $('#{{ id }}_text').text(a);
            }).trigger('change');
         });
    </script>
{% endblock %}