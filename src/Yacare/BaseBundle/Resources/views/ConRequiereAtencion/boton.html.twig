{% if res.Entidad.RequiereAtencion %}
    <a data-toggle="modal" class="btn btn-danger" title="Haga clic para desactivar la advertencia"
    	href="{{ path(res.ObtenerRutaAccion('atencion'), { 'id': res.Entidad.Id, 'valor': not res.Entidad.RequiereAtencion }) }}">
    	<i class="fa fa-fw fa-warning"></i> ¡Requiere atención!</a>
{% else %}
	<a data-toggle="modal" class="btn btn-default" title="Haga clic para sactivar la advertencia"
    	href="{{ path(res.ObtenerRutaAccion('atencion'), { 'id': res.Entidad.Id, 'valor': not res.Entidad.RequiereAtencion }) }}">
    	<i class="fa fa-fw fa-hand-paper-o"></i> <span class="a-showonhover">Solicitar atención</span></a>
{% endif %}
