{% extends 'TapirTemplateBundle::blank.html.twig' %}

{% block pagina_titulo %}Vista previa{% endblock %}

{% block pagina_contenido %}
{% if entity.EsTextoPlano -%}
	<div style="padding: 20px;">
    	{{ contenido|nl2br }}
	</div>
{% elseif entity.EsHtml %}
	{{ contenido }}
{% elseif entity.EsPdf %}
	<iframe src="{{ asset(entity.RutaRelativa ~ entity.Token) }}" style="width: 100%; height: 100%; min-height: 400px;">
	</iframe>
{% else %}
	<div style="padding: 20px;">
		<img src="{{ entity.Icono }}" alt="{{ entity.Nombre }}" class="img-responsive pull-left"
    		data-toggle="tooltip" data-placement="top" title="{{ entity.Nombre }}"
    		alt="Miniatura de {{ entity.Nombre }}" />
		<p>No se puede mostrar una vista previa para este archivo.</p>
		<p>Si lo desea, puede <a href="{{ asset(entity.RutaRelativa ~ entity.Token) }}">descargarlo</a> en su equipo y usar un programa para verlo o editarlo.
	</div>
{% endif %}	
{% endblock %}