{% macro verificacion_icono(nivel) %}{% spaceless %}
    {% if nivel == 0 %}
        <small><i class="fa fa-question text-muted fa-fw" title="Sin confirmar"></i></small>    
    {% elseif nivel == 20 %}
        <small><i class="fa fa-check text-success fa-fw" title="Cotejado"></i></small>
    {% elseif nivel == 30 %}
        <small><i class="fa fa-certificate text-success fa-fw" title="Certificado"></i></small>
    {% elseif nivel == 40 %}
        <small><i class="fa fa-certificate text-success fa-fw" title="Nativo"></i></small>
    {% endif %}
{% endspaceless %}{% endmacro %}

{% macro post_listado(entities) %}
	{% if entities|length == 0 %}
		<div class="container-fluid"><div class="row">
			<div class="col-xs-12 col-sm-8 col-sm-offset-2 panel panel-green">
              <div class="panel-body">
                No hay elementos para mostrar en la vista actual.
              </div>
            </div>
		</div></div>
	{% endif %}
{% endmacro %}