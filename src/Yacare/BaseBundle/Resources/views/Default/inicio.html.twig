{% extends 'TapirTemplateBundle::layout.html.twig' %}

{% block pagina_titulo%}{{ tapir_cliente }}{% endblock %}

{% block pagina_contenido %}
<div class="container-fluid">

<div class="row">
	<p>Bievenido al sistema de gestión del Municipio de Río Grande.</p>
</div>

<div class="row">
{% if is_expr_granted("hasAnyRole('ROLE_COMERCIO_ADMINISTRADOR', 'ROLE_COMERCIO_INSPECTOR')") %}
	<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4"><div class="panel panel-red">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-shopping-cart fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge">Comercio</div>
                    <div> </div>
                </div>
            </div>
        </div>
        <a href="{{ path('yacare_comercio_default_inicio') }}">
            <div class="panel-footer link">
                <span class="pull-left">Inicio</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
        <a href="{{ path('yacare_comercio_comercio_listar') }}">
            <div class="panel-footer link">
                <span class="pull-left">Listado de comercios</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div></div>
{% endif %}


	<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4"><div class="panel panel-green">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-home fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge">Catastro</div>
                    <div> </div>
                </div>
            </div>
        </div>
        <a href="{{ path('yacare_catastro_calle_listar') }}">
            <div class="panel-footer link">
                <span class="pull-left">Calles</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
        <a href="{{ path('yacare_catastro_barrio_listar') }}">
            <div class="panel-footer link">
                <span class="pull-left">Barrios</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
        <a href="{{ path('yacare_catastro_zona_listar') }}">
            <div class="panel-footer link">
                <span class="pull-left">Zonificación</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
        <a href="{{ path('yacare_catastro_partida_listar') }}">
            <div class="panel-footer link">
                <span class="pull-left">Partidas</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div></div>

{% if is_expr_granted("hasAnyRole('ROLE_FLOTA_ADMINISTRADOR', 'ROLE_FLOTA_CARGA')") %}
	<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4"><div class="panel panel-yellow">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-car fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge">Flota</div>
                    <div> </div>
                </div>
            </div>
        </div>
        <a href="{{ path('yacare_flota_vehiculo_listar') }}">
            <div class="panel-footer link">
                <span class="pull-left">Carga de combustible</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div></div>
{% endif %}

{% if requerimientos_pendientes|length > 0 %}
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4"><div class="panel panel-red">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-ticket fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge">{{ requerimientos_pendientes|length }}</div>
                    <div>Requerimientos</div>
                </div>
            </div>
        </div>
        <a href="{{ path('yacare_requerimientos_requerimiento_listar') }}">
            <div class="panel-footer link">
                <span class="pull-left">Ver todos</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div></div>
{% elseif requerimientos_propios|length > 0 %}
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4"><div class="panel panel-yellow">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-ticket fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge">{{ requerimientos_propios|length }}</div>
                    <div>Requerimientos</div>
                </div>
            </div>
        </div>
        <a href="{{ path('yacare_requerimientos_requerimiento_listar') }}">
            <div class="panel-footer link">
                <span class="pull-left">Ver todos</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div></div>
{% endif %}
</div>

    <div class="pull-right text-right">
    	<img src="{{ asset('bundles/yacarebase/img/yacare_logo240.png') }}"
    		style="padding: 20px; transform: scaleX(-1) scaleY(1); opacity: .2;"
    		alt="{{ tapir_nombreaplicacion }}" /><br />
    
    	<a href="http://yacare.dir.riogrande.gob.ar">http://yacare.dir.riogrande.gob.ar</a>
	</div>
</div>

{% endblock %}


{% block pagina_acciones %}
{% if app.user %} 
    <span class="dropdown pull-right">
	    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
		{% if app.user.Nombre %}
		    {{ app.user.NombreAmigable }}
		{% else %}
		    {{ app.user }}
		{% endif %}
		</a>
	<ul class="dropdown-menu">
		<li><a data-toggle="ajax-link" href="{{ path('usuario_editarperfil_actual') }}"><i
			class="fa fa-user fa-fw"></i> Mi perfil</a></li>
		<li><a data-toggle="ajax-link" href="{{ path('usuario_cambiarcontrasena_actual') }}"><i
			class="fa fa-key fa-fw"></i> Cambiar contraseña</a></li>
		<li class="divider"></li>
		<li><a href="{{ path('logout') }}"><i class="fa fa-power-off fa-fw"></i> Desconectarse</a></li>
	</ul>
	</span>
{% endif %}
{% endblock pagina_acciones %}