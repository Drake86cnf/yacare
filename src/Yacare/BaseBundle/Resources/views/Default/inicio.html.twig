{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block pagina_titulo %}{% endblock %}

{% block pagina_contenido %}

<div class="jumbotron">
    <h1>Bienvenido <img class="pull-right" src="{{ asset('bundles/yacarebase/img/yacare_logo240.png') }}" style="padding: 32px; transform: scaleX(-1);" alt="Yacaré" /></h1>
    
    <p>Sistema de gestión del Municipio de Río Grande.</p>
</div>

{% if user is defined %}
<div class="container-fluid">
<div class="row">
    <div class="col-xs-8 col-sm-8 col-md-8">
        Usted está conectado como <span class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">{{ app.user.Nombre }} {{ app.user.Apellido }}</a>
        <ul class="dropdown-menu">
            <li><a data-toggle="ajax-link" href="{{ path('yacare_base_persona_editarperfil') }}"><i class="fa fa-user"></i> Mi perfil</a></li>
            <li><a data-toggle="modal" data-target="#modal" href="{{ path('yacare_base_persona_cambiarcontrasena') }}"><i class="fa fa-key"></i> Cambiar contraseña</a></li>
            <li class="divider"></li>
            <li><a href="{{ path('logout') }}"><i class="fa fa-power-off"></i> Desconectarse</a></li>
        </ul>
        </span> (nombre de usuario {{ app.user.Username }}).
    </div>
    <div class="col-md-4">
    </div>
</div>
</div>
{% endif %}
{% endblock %}
