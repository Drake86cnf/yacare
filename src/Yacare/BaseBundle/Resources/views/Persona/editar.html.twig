{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block title parent() ~ " - Personas" %}

{% block content %}

<form class="form-horizontal" action="{{ path(baseroute ~ '_guardar', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <legend>{% if entity.id %} {{ entity }} {% else %} Nueva persona {% endif %}</legend>
    {{ form_errors(edit_form) }}
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary"><i class="fa fa-white icon-ok"></i> Guardar</button>
        <a class="btn btn-default" href="{{ path(baseroute ~ '_listar') }}">Cancelar</a>
    </div>
</form>

{% if entity.id %}
<a class="btn btn-danger" href="{{ path(baseroute ~ '_eliminar', { 'id': entity.id }) }}"><i class="fa fa-trash-o icon-white"></i> Eliminar persona</a>
{% endif %}

{% endblock %}