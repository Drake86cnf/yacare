{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block title %}Perfil de usuario{% endblock %}

{% block content %}

<form class="form-horizontal" action="{{ path('yacare_base_persona_guardar', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<legend>Perfil de {{ entity }}</legend>
	{{ form_widget(edit_form) }}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary"><i class="icon-white icon-ok"></i> Guardar</button>
		<a class="btn" href="{{ path('yacare_base_persona_listar') }}">Cancelar</a>
    </div>
</form>

{% endblock %}