{% block pagina_contenido %}

<table class="table table-condensed table-hover">
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a onclick="seleccionarItem('{{ entity.id }}', '{{ entity.NombreVisible }}'); return false;">{{ entity.Apellido ~ ', ' ~ entity.Nombre }}</a></td>
            <td>{{ entity.DocumentoNumero }}</td>
            <td>{% for Nombre in entity.Grupos %}<span class="label label-info">{{ Nombre }}</span>&nbsp;{% endfor %}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}