{% extends 'TapirTemplateBundle::layout.html.twig' %}

{% import 'TapirBaseBundle:Default:macros_bootstrap.html.twig' as bs %} 

{% block pagina_titulo %}Partida Nº {{ res.Entidad.Numero }}{% endblock %}

{% block pagina_contenido %}
    <div class="container-fluid">
    	<div class="row">
    		<div class="col-sm-8 col-xs-12">
    		    {{ bs.grid_label_text('Sección', res.Entidad.Seccion) }} 
    		    {{ bs.grid_label_text('Macizo', res.Entidad.Macizo) }}
    			{{ bs.grid_label_text('Parcela', res.Entidad.Parcela) }} 
    			{{ bs.grid_label_text('Unidad funcional', res.Entidad.UnidadFuncional) }} 
    			{{ bs.grid_label_text('Domicilio', res.Entidad.Domicilio) }}
    			{% if res.Entidad.Titular %} 
    			    {{ bs.grid_label_text('Titular', '<a data-toggle="ajax-link" href="' ~ 
    			        path('yacare_base_persona_ver', { 'id': res.Entidad.Titular.id }) ~ '">' ~ 
    			        res.Entidad.Titular ~ '</a>') }} 
    			{% endif %} 
    			{% if res.Entidad.Zona %} {{ bs.grid_label_text('Zona', res.Entidad.Zona) }} {% endif %}
    		</div>
    		<div class="col-sm-4 hidden-xs">
    			<i class="fa fa-home fa-5x text-muted pull-right"></i>
    		</div>
    	</div>
    </div>
    
    <hr />
    
    <p class="alert alert-info"><i class="fa fa-info-circle"></i>
    	Estos datos fueron importados desde el SiGeMI y sólo pueden ser modificados mediante dicho sistema.
    </p>
{% endblock %}

{% block pagina_acciones %}
    <a data-toggle="ajax-link" class="btn btn-link pull-right" href="{{ path(res.ObtenerRutaAccion('listar'), 
        res.Arrastre) }}"><i class="fa fa-reply"></i> Volver</a>
{% endblock %}
