{% extends 'YacareBaseBundle:Default:listar.html.twig' %}

{% block title %}Requisitos{% endblock %}

{% block content_header '' %}

{% block content %}

{% include 'YacareBaseBundle::buscar.html.twig' %}

<table class="table table-striped">
    <thead>
        <tr>
            <th> </th>
            <th>Nombre</th>
            <th>Instancia</th>
            <th>Tipo</th>
            <th>Detalle</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a class="btn btn-mini" href="{{ path(baseroute ~ '_editar', arrastre|merge({ 'id': entity.Id })) }}"><i class="icon-edit"></i> Editar</a></td>
            <td>&nbsp;{{ entity.Nombre }}</td>
            <td>{{ entity.InstanciaNombre }}</td>
            <td>{{ entity.TipoNombre }}</td>
            <td>{% for requiere in entity.Requiere %}
                <span class="label label-info">{{ requiere.Nombre|length > 50 ? requiere.Nombre[:50] ~ '...' : requiere.Nombre }}</span>
            {% endfor %}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% include 'YacareBaseBundle::paginar.html.twig' %}

<a href="{{ path(baseroute ~ '_editar_1', arrastre) }}" class="btn"><i class="icon-plus"></i> Nuevo requisito</a>
{% endblock %}
