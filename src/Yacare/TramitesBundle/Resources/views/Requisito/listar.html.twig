{% extends 'YacareBaseBundle:Default:listar.html.twig' %}

{% block pagina_titulo %}Requisitos{% endblock %}

{% block pagina_contenido %}
{% include 'TapirBaseBundle::buscar.html.twig' %}

<table class="table table-hover">
    <thead>
        <tr>
            <th> </th>
            <th>Nombre</th>
            <th class="hidden-xs">Tipo</th>
            <th class="hidden-sm hidden-xs">Detalle</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a data-toggle="ajax-link" class="btn btn-default btn-xs hidden-print showonhover" href="{{ path(baseroute ~ '_editar', arrastre|merge({ 'id': entity.Id })) }}"><i class="fa fa-edit"></i> Editar</a></td>
            <td>&nbsp;{{ entity.Nombre }}</td>
            <td class="hidden-xs">{{ entity.TipoNombre }}</td>
            <td class="hidden-sm hidden-xs">{% for requiere in entity.Requiere %}
                <span class="label label-info">{{ requiere.Nombre|length > 50 ? requiere.Nombre[:50] ~ '...' : requiere.Nombre }}</span>
            {% endfor %}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% include 'TapirBaseBundle::paginar.html.twig' %}

{% endblock %}

{% block pagina_acciones2 %}
<a data-toggle="ajax-link" href="{{ path(baseroute ~ '_editar_1', arrastre) }}" class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo requisito</a>
{% endblock %}
