{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block title %}Requisito{% endblock %}

{% block content %}

<form class="form-horizontal" action="{{ path(baseroute ~ '_guardar', arrastre|merge({ 'id': entity.id })) }}" method="post" {{ form_enctype(edit_form) }}>
    <legend>{% if entity.id %} {{ entity.Nombre }} {% else %} Nuevo requisito {% endif %}</legend>
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary"><i class="fa fa-white icon-ok"></i> Guardar</button>
        <a class="btn btn-default" href="{{ path(baseroute ~ '_listar', arrastre) }}">Cancelar</a>
    </div>
</form>

<script type="text/javascript">
    function CambioTipo() {
        var ValorTipo = $('#yacare_tramitesbundle_requisitoype_Tipo').val();
        switch(ValorTipo) {
            case 'compy':
            case 'compo':
                $('#yacare_tramitesbundle_requisitoype_Requisitos').removeAttr('disabled');
                $('#yacare_tramitesbundle_requisitoype_Instancia').attr('disabled', true);
                break;
            case 'ext':
                $('#yacare_tramitesbundle_requisitoype_Requisitos').attr('disabled', true);
                $('#yacare_tramitesbundle_requisitoype_Instancia').removeAttr('disabled');
                break;
            default:
                $('#yacare_tramitesbundle_requisitoype_Requisitos').attr('disabled', true);
                $('#yacare_tramitesbundle_requisitoype_Instancia').attr('disabled', true);
                break;
        }
    }
    
