{% extends 'TapirAbmBundle::editar.html.twig' %}

{% block pagina_titulo %}{% if entity.id %}
		{{ entity.Nombre }}
{% else %}
	Nuevo Requisito
{% endif %}{% endblock %}
{% block pagina_scripts %}
<script>
$(function() {

	
    $('#yacare_tramitesbundle_requisitotype_Tipo').change(function() {
        if($('#yacare_tramitesbundle_requisitotype_Tipo').val() === 'int') {
        	$('#yacare_tramitesbundle_requisitotype_Departamento').prop('disabled', false);
        } else {
        	$('#yacare_tramitesbundle_requisitotype_Departamento').prop('disabled', true);
            $('#yacare_tramitesbundle_requisitotype_Departamento').val('');
        }
    });
    $('#yacare_tramitesbundle_requisitotype_Tipo').trigger('change');
});
</script>
{% endblock %}

