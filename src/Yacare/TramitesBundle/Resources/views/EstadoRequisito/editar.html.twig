{% extends 'YacareBaseBundle::layout.html.twig' %}

{% block title %}Tr√°mite / Estado requisito{% endblock %}

{% block content %}

<form class="form-horizontal" action="{{ path(baseroute ~ '_guardar', arrastre|merge({ 'id': entity.id })) }}" method="post" {{ form_enctype(edit_form) }}>
    <legend>{% if entity.id %}{{ entity }}<small> de {{ entity.Tramite }}</small>{% else %}Nuevo estado de requisito{% endif %}</legend>
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary"><i class="fa fa-white icon-ok"></i> Guardar</button>
        <a class="btn btn-default" href="{{ path('yacare_tramites_tramite_editar', arrastre|merge({ 'id': entity.id })) }}">Cancelar</a>
    </div>
</form>

{% endblock %}