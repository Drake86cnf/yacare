{% extends 'TapirAbmBundle::listar.html.twig' %}

{% block pagina_titulo %}Empresas constructoras{% endblock %}

{% block pagina_contenido %}
<table class="table table-condensed table-stripped">
	<thead>
		<tr>
			<th>#</th>
			<th>Nombre</th>
			<th>Domicilio</th>
			<th>Teléfono</th>
			<th>Representante técnico</th>
		</tr>
	</thead>
	<tbody>
		{% for entity in entities %}
		<tr>
			<td>{{ entity.id }}</td>
			<td>{{ entity.Persona }}</td>
			<td>{{ entity.Persona.Domicilio }}</td>
			<td>{{ entity.Persona.TelefonoNumero }}</td>
			<td>{{ entity.RepresentanteTecnico.Persona }} <span
				class="text-muted">(mat. {{ entity.RepresentanteTecnico.id }})</span></td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% endblock %}