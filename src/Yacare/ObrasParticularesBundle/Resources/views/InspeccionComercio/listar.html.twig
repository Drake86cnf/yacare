{% extends 'TapirBaseBundle:Default:listar.html.twig' %}

{% block pagina_titulo %}Inspecciones a comercio{% endblock %}

{% block pagina_contenido %}
{% include 'TapirBaseBundle::buscar.html.twig' %}

<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Nº</th>
            <th>Expediente</th>
            <th>Titular</th>
            <th>Actividad</th>
            <th>Partida</th>
            <th>Sup.</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a data-toggle="ajax-link" class="btn btn-default btn-xs hidden-print showonhover" href="{{ path(baseroute ~ '_editar', { 'id': entity.Id }) }}"><i class="fa fa-edit"></i> Editar</a></td>
            <td>{{ entity.id }}</td>
            <td>{{ entity.ExpedienteNumero }}</td>
            <td>{% if entity.Titular %}{{ entity.Titular }}{% else %}{{ entity.TitularNombre }}{% endif %}</td>
            <td>{% if entity.ActividadPrincipal %}{{ entity.ActividadPrincipal }}{% else %}{{ entity.ActividadNombre }}{% endif %}</td>
            <td>{{ entity.Partida }}</td>
            <td>{% if entity.Superficie > 0 %}{{ entity.Superficie }} m²{% endif %}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% include 'TapirBaseBundle::paginar.html.twig' %}

{% endblock %}

{% block pagina_acciones2 %}
<a data-toggle="ajax-link" href="{{ path(baseroute ~ '_editar_1') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Nueva inspección</a>
{% endblock %}